{
  "builders": [
    {
      "type": "vmware-iso",
      "iso_url": "iso/WIN2016TP3-10514.0.150808-1529.TH2_RELEASE_SERVER_OEMRET_X64FRE_EN-US.iso",
      "iso_checksum_type": "none",
      "headless": true,
	  "communicator": "winrm",
	  "winrm_username": "packer",
	  "winrm_password": "packer",
      "boot_wait": "2m",
      "ssh_username": "packer",
      "ssh_password": "packer",
      "ssh_wait_timeout": "6h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_os_type": "windows8srv-64",
      "tools_upload_flavor": "windows",
      "disk_size": 61440,
      "vnc_port_min": 5901,
      "vnc_port_max": 5980,
      "floppy_files": [
        "./Autounattend.xml",
		"./scripts_unattend/*"
      ],
      "vmx_data": {
        "RemoteDisplay.vnc.enabled": "false",
        "RemoteDisplay.vnc.port": "5900",
        "memsize": "2048",
        "numvcpus": "2",
        "scsi0.virtualDev": "lsisas1068"
      }
    },
    {
      "type": "virtualbox-iso",
      "iso_url": "iso/WIN2016TP3-10514.0.150808-1529.TH2_RELEASE_SERVER_OEMRET_X64FRE_EN-US.iso",
      "iso_checksum_type": "none",
      "headless": false,
      "boot_wait": "2m",
	  "communicator": "winrm",
	  "winrm_username": "packer",
	  "winrm_password": "packer",	  
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "6h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_os_type": "Windows2012_64",
      "disk_size": 61440,
      "floppy_files": [
        "./Autounattend.xml",
		"./scripts_unattend/*"
      ],
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "inline": [
        "while (!(Test-Path c:\\status.txt)) { Start-Sleep -Seconds 30 }"
      ]
    },
    {
      "type": "powershell",
      "script": "scripts_packer/vm-guest-tools.ps1",
	  "valid_exit_codes": [0,3010,1]
    },
    {
      "type": "windows-shell",
      "inline": [
        "wmic useraccount where name='packer' set disabled=false"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "dir"
      ]
    }
  ], 
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "windows_2016_tp3_{{.Provider}}.box",
      "vagrantfile_template": "vagrantfile-windows_2016_tp3.template"
    },
	{
		"type":"compress",
		"output":"{{.BuildName}}.zip"
	}
  ]
}
